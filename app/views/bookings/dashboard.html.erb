
<div class="container">

  <h2 class= "text-center"> Welcome <%= current_user.name %> </h2>

  <p class= "text-center mb-4">Your bookings info:</p>



<% if current_user.bookings.empty? %>
<p class= "text-center">  <%= "You haven't made any bookings as yet" %> </p>
<div class="text-center mt-4">
  <%= link_to 'View our bikes', bikes_path, class: "home-button", style: "text-decoration: none" %>
</div>

<% else %>


<div class="row row-cols-1 row-cols-md-3 mt-4">

    <% @bookings.each do |booking| %>

    <div class="col mb-4">

      <div class="card shadow-sm" style = "border-radius: 10px;">

        <div class="card-body">
          <div class="card-text">
            <p> <strong>Booking start date: </strong> <%= booking.start_date %> </p>
            <p> <strong>Booking end date: </strong> <%= booking.end_date %> </p>
            <p> <strong>Total price: </strong> $<%= booking.total_price %> </p>
            <p> <strong>Status: </strong> <%= booking.status %> </p>
          </div>
        </div>

      </div>

    </div>
    <% end %>

<% end %>

</div>
